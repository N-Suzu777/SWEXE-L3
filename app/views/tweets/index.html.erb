<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>

<% @tweets.each do |e| %>
    <p>
        <li>
            <%= render "form" %>
            <%= e.message %><br>
            <%= ((Time.current - e.tdate)/60).to_i %>分<br>
            <%=link_to '削除', tweet_path(e), data: { turbo_method: :delete } %>
            <%=link_to '表示', tweet_path(e) %>
            <%=link_to '編集', edit_tweet_path(e) %>
        </li>
    </p>
<% end %>


